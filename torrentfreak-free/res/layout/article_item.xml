<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/article_item_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:textColor="@color/article_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:padding="8dp"
            android:textSize="20.0sp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/article_item_details_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/date_icon"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/date_icon_description"
            android:src="@drawable/ic_action_calendar_day" />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:textColor="@color/article_item_details"
            android:textAppearance="@android:style/TextAppearance.Small" />
        <ImageView
            android:id="@+id/comment_count_icon"
            android:scaleType="fitXY"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="6dp"
            android:contentDescription="@string/comment_icon_description"
            android:src="@drawable/ic_action_monolog" />
        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/article_item_details"
            android:textAppearance="@android:style/TextAppearance.Small" />
    </LinearLayout>
</LinearLayout>
